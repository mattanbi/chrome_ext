{
  "name": "Namely Everywhere",
  "version": "1.0",
  "description": "All the HR Knowledge you need in one place",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Namely.png",
      "32": "images/Namely.png",
      "48": "images/Namely.png",
      "128": "images/Namely.png"
    }
  },
  "icons": {
    "16": "images/Namely.png",
    "32": "images/Namely.png",
    "48": "images/Namely.png",
    "128": "images/Namely.png"
  },
  "manifest_version": 2
}
